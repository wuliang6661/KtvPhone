<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="18dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="12dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:ignore="MissingDefaultResource">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/list_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/slide_da5d6f_conner_2_5_dp"
            android:gravity="center"
            android:minWidth="30dp"
            android:minHeight="30dp"
            android:text="01"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/music_img"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/music_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENEMY"
                android:textColor="#373737"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/music_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Imagine Dragons"
                    android:textColor="#949494"
                    android:textSize="10sp" />


                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="2dp"
                    android:src="@mipmap/fire_logo"
                    android:visibility="gone" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">


        <TextView
            android:id="@+id/play_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="100,341,000"
            android:textColor="#393939"
            android:textSize="20sp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="8dp"
            android:layout_height="5dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="102%"
            android:textColor="#ED695A"
            android:textSize="8sp"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/play_music"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@drawable/slide_white_conner_1dp_strock_8d8d8d"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="试听"
                android:textColor="#888888"
                android:textSize="15sp" />

            <View
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#888888" />

            <ImageView
                android:id="@+id/music_play_img"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="11dp"
                android:src="@mipmap/music_start" />

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/create_order"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginLeft="36dp"
        android:background="@drawable/slide_ff8000_conner_5dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="点播"
        android:textColor="@color/white"
        android:textSize="15sp" />


</LinearLayout>